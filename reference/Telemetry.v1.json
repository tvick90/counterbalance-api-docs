            "type": "string"
          },
          "name": "datapointId",
          "in": "path",
          "required": true
        }
      ],
      "get": {
        "summary": "Get Data Point Details",
        "tags": [],
        "responses": {},
        "operationId": "get-v1-telemetry-datapoint-datapointId",
        "parameters": [
          {
            "$ref": "#/components/parameters/collectorID"
          }
        ]
      },
      "delete": {
        "summary": "Delete Data Point",
        "operationId": "delete-v1-telemetry-datapoint-datapointId",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
