        "operationId": "post-v1-collector",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "description": "Create a new Collector for a data point",
        "security": [
          {
            "Bearer Token": []
          }
        ],
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "in": "header",
            "name": "Content-Type",
            "description": "application/json",
            "required": true
          }
        ]
      }
    },
